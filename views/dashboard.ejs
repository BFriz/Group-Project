  <h1>Are you really flirty?</h1>
  <button id="close_chat">Close chat</button>
     <!-- <p class="connecting">Please wait, connecting to server...</p> -->

    <ul id='chat_container' class="chatlines">
      </ul>
    <form action="#">
      <input id="nick" type="text" value= {{ facebook.name  }}  />
      <input type="text" id="text" placeholder="Tell them about your mood" />
