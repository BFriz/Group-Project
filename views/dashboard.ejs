  <div id="user_profile">
    <h4>Share the Mood Around</h4>
    <div class="user-profile"> 
     <img src= '{{facebook.profile_pic_url}}' >
    </div>
    <p> {{facebook.name}}, {{dob}}<br>{{mood}}</p>
    <p id="showing_now_id" class="hidden">{{ _id }}</p>
  </div>
  <div id="yes_no_box" class="yes_no_box">
    <ul>
      <li><a href="#" id="yes_button">YES</a></li>
      <li><a href="#" id="no_button">NO</a></li>
    </ul>
  </div>
